@model IEnumerable<SliderVM>
@{
    ViewData["Title"] = "Index";
}

<div class="container mt-5 ml-5">
    <h2 class="text-center">Slider</h2>

    <div class="create-operator ml-3">
        <a asp-action="Create" class="btn btn-info btn-circle btn-md">
            <i class="fas fa-plus-circle"></i>
        </a>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th class="text-center">Image</th>                     
                        <th class="text-center">Operations</th>

                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center"><img src="~/img/@item.Image" width="100px" height="100px" /></td>
                            <td class="text-center mr-3">
                                <a asp-action="Detail" class="btn btn-info btn-circle btn-md">
                                    <i class="fas fa-info-circle"></i>
                                </a>
                                <a class="detail btn btn-primary btn-md" asp-action="Edit" asp-route-id="@item.Id">
                                    <i class="fas fa-sync-alt"></i>
                                </a>
                                <form class="d-inline" method="post" asp-action="Delete" asp-route-id="@item.Id">
                                    <button type="submit" class="detail btn btn-danger btn-md">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>

                    }

                </tbody>
            </table>

        </div>
    </div>

</div>





