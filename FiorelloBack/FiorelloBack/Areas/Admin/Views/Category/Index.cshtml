@model IEnumerable<CategoryProductVM>
@{
    ViewData["Title"] = "Index";
}

<div class="container mt-5 ml-5">
    <h2 class="text-center">Categories</h2>

    <div class="create-operator ml-3">
        <a asp-action="Create" class="btn btn-info btn-circle btn-md">
            <i class="fas fa-plus-circle"></i>
        </a>
       </div>

    <div class="card-body">     
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th class="text-center">Category Name</th>
                        <th class="text-center">Created Date</th>
                        <th class="text-center">Products count</th>
                        <th class="text-center">Operations</th>
                      
                    </tr>
                </thead>
         
                <tbody>
                 @foreach (var item in Model)
                    {
                        <tr class="category-data">
                            <td class="text-center">@item.CategoryName</td>
                            <td class="text-center">@item.CreateDate</td>
                            <td class="text-center">@item.ProductCount</td>
                            <td class="text-center mr-3">
                                <a asp-action="Detail" class="btn btn-info btn-circle btn-md">
                                    <i class="fas fa-info-circle"></i>
                                </a>
                                <a class="detail btn btn-primary btn-md" asp-action="Edit" asp-route-id="@item.Id">
                                    <i class="fas fa-sync-alt"></i>
                                </a>
                               <form class="d-inline" method="post" asp-action="Delete" asp-route-id="@item.Id">
                                    <button type="submit" class="detail btn btn-danger btn-md">
                                        <i class="fas fa-archive"></i>
                                    </button>
                               </form>
                                <a class="detail btn btn-secondary btn-md add-archive" data-id="@item.Id">
                                    <i class="fas fa-book"></i>
                                </a>
                            </td>
                        </tr>

                    }
                   
                </tbody>
            </table>

        </div>
    </div>

</div>

@section js{
    <script src="~/admin/js/archive.js" ></script>
}



